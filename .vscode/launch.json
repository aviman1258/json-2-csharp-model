{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/web/app.py",  // Updated to point to the web folder
            "env": {
                "FLASK_APP": "web/app.py",  // Updated to point to the web folder
                "FLASK_ENV": "development"
            },
            "args": [
                "run"
            ],
            "jinja": true
        }
    ]
}
